@model licenta.ViewModel.ChangePasswordViewModel
<p class="page_title">
    Schimba parola
</p>
<div id="form_ctn">
    @using (Html.BeginForm("ChangePassword", "Account"))
    {
        @Html.ValidationSummary()
        <div class="form_group">
            @Html.LabelFor(m => m.CurrentPassword)
            @Html.TextBoxFor(m => m.CurrentPassword)
            @Html.ValidationMessageFor(m => m.CurrentPassword, null, new { @class = "validation_mesg" })
        </div>
        <div class="form_group">
            @Html.LabelFor(m => m.NewPassword)
            @Html.TextBoxFor(m => m.NewPassword)
            @Html.ValidationMessageFor(m => m.NewPassword, null, new { @class = "validation_mesg" })
        </div>
        <div class="form_group">
            @Html.LabelFor(m => m.ConfirmNewPassword)
            @Html.TextBoxFor(m => m.ConfirmNewPassword)
            @Html.ValidationMessageFor(m => m.ConfirmNewPassword, null, new { @class = "validation_mesg" })
        </div>
        <input type="submit" value="Salveaza" class="save_button" id="change_pwd_btn" />
    }
</div>
@section Style{
    <link href="~/css/profile_forms.css" rel="stylesheet" />
}