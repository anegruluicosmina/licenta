@inject SignInManager<ApplicationUser> signInManager;
@{
    var userCategories = ViewBag.UserCategories;
}
<div class="profile_page_ctn">
    <nav class="profile_menu_nv">
        <ul>
            @if (!User.IsInRole("Admin") && signInManager.IsSignedIn(User))
            {
                <li>
                    <button type="submit" id="test_btn">Testele mele</button>
                </li>
            }
            <li><button type="submit" id="reset_pwd_btn">Reseteaza parola</button></li>
            <li><button type="submit" id="edit_info_btn">Editeaza profilul</button></li>
            <li><button type="submit" id="edit_email_btn">Editeaza email</button></li>
        </ul>

    </nav>
    <div class="test_ctn">
        <div class="test_menu">
            <ul>
                <li><button type="submit" id="chart_btn">Rezultate pe toata perioada</button></li>
                @foreach (var category in ViewBag.UserCategories)
                {
                    <li><button type="submit" class="total_chart_ctg_btn" id="@category.Key">Categoria @category.Value total</button></li>
                    <li><button type="submit" class="chart_ctg_btn" id="@category.Key">Categoria @category.Value periodic</button></li>
                }
            </ul>
        </div>
        <div id="chart_ctn">
            <canvas id="myChart" style="width: 512px; height: 256px"></canvas>
        </div>
        <div id="profile_form_ctn"></div>
    </div>
</div>



@*<script src="~/lib/Chart.js/Chart.min.js"></script>*@

<canvas id="lineChart"></canvas>



@section Scripts{
    <link href="~/lib/Chart.js/Chart.css" rel="stylesheet" />
    <script type="module" src="~/lib/Chart.js/Chart.min.js"></script>
    <script src="~/js/profile.js"></script>
}
@section Style{
    <link href="@Url.Content("~/css/profile_menu.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/css/questionForm.css")" rel="stylesheet" type="text/css" />
}
