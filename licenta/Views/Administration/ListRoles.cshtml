@model IEnumerable<IdentityRole>

@{
    ViewBag.Title = "All roles";
}
<p class="page_title">All roles </p>

@if (!Model.Any())
{
    <div>
        No roles created yet
    </div>
}
else
{
    <div class="roles_ctn">
        @foreach (var role in Model)
        {
            <div class="role_ctn">
                <div>
                    @Html.Label(role.Name, null, new { @class = "role_name" })
                    @Html.Label(role.Id, null, new { @class = "role_id" })
                </div>
                @Html.ActionLink("Lista utilizatori", "ListUsersInRole", "Administration", new { roleId = role.Id }, null)
            </div>
        }
        @Html.ActionLink("Adauga un nou rol", "CreateRole", "Administration")

    </div>
}
@section Style{
    <link href="~/css/list_roles_page.css" type="text/css" rel="stylesheet" />
}
