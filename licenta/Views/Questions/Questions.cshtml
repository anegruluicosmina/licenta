@model IEnumerable<licenta.Models.Question>
@{

    @*to take the id of the difficulty*@

    var id = 0;
    foreach (var question in Model)
    {
        id = question.CategoryId;
        break;
    }

}
@section Style{
    <link href="@Url.Content("~/css/questions.css")" rel="stylesheet" type="text/css" />
}
<p id="instruction"> Pentru a edita întrebarea dă click pe cerinta acestia </p>
<div class="questions_ctn">
    @foreach (var question in Model)
    {
        <div class="question_ctn">
            @Html.ActionLink(question.Text, "Edit", "Questions", new { id = question.Id }, null)
            <div class="answers_ctn">
                @foreach (var answer in question.Answers)
                {
                    <div>
                        @{
                            if (answer.IsCorrect)
                            {
                                <div class="correct_answer">
                                    @Html.Label(answer.Text)
                                </div>
                            }
                            else
                            {
                                <div class="answer">
                                    @Html.Label(answer.Text)
                                </div>
                            }
                        }
                    </div>
                }
            </div>
        </div>
    }
</div>


