@model licenta.ViewModel.ForgotPasswordViewModel
<p class="page_title">
    Recupereaza parola
</p>
<div id="form_ctn">
    @using (Html.BeginForm("ForgotPasssword", "Account"))
    {
        <div class="form_group">
            @Html.LabelFor(m => m.Email)
            @Html.TextBoxFor(m => m.Email)
            @Html.ValidationMessageFor(m => m.Email, null, new { @class = "validation_mesg" })
        </div>
        <input type="submit" class="save_button" value="Recupereaza" />
    }
</div>
@section Style{ 
    <link href="~/css/profile_forms.css" rel="stylesheet" type="text/css"/>
}