@model IEnumerable<licenta.Models.Category>
<div class="main_ctn">
    <div class="category" id="new_ctg">
        @Html.ActionLink("Întrebare nouă", "New", "Questions")
    </div>
    <div class="category" id="new_qst">
        @Html.ActionLink("Categorie nouă", "NewCategory", "Questions")
    </div>
    <div id="categories_ctn">

        @foreach (var category in Model)
        {
            <div class="category">
                @Html.ActionLink("Categoria: " + category.Name, "Questions", "Questions", new { id = category.Id }, null)
                @Html.ActionLink("Șterge categoria", "DeleteCategory", "Questions", new { id = category.Id },new{ @class = "btn_delete"} )
            </div>
        }
    </div>
</div>


@section Style{
    <link href="@Url.Content("~/css/categories.css")" rel="stylesheet" type="text/css" />
}
