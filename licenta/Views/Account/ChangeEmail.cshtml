@model licenta.ViewModel.ChangeEmailViewModel

<div id="form_ctn">
    @using (Html.BeginForm())
    {
        <p class="title">Editează adresa de email</p>
        <div class="validation_summ_ctn">@Html.ValidationSummary()</div>
        <div class="form_group">
            @Html.LabelFor(m => m.Email)
            @Html.TextBoxFor(m => m.Email)
            @Html.ValidationMessageFor(m => m.Email, null, new { @class = "validation_mesg" })
        </div>
        <input type="submit" class="save_button" value="Salvează" />
    }
</div>
@section Style{
    <link href="~/css/profile_forms.css" rel="stylesheet" />
}